---
name: consul-agent

templates:
  ctl.sh: bin/ctl
  config.json.erb: config/config.json

packages:
  - consul-agent

properties:
  network_name:
    description: "Name of the network the job resides in."

  consul.agent.mode:
    description: "Mode to run the agent in. (client or server)"
    default: client

  consul.agent.servers:
    description: "Server addresses to join on start."
    default: []

  consul.agent.log_level:
    description: "Agent log level."
    default: info

  consul.agent.datacenter:
    description: "Name of the agent's datacenter."
    default: dc1
